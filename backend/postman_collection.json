{
  "info": {
    "name": "Gestor Empresarial API",
    "description": "Coleção de endpoints para o sistema de gestão empresarial",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Autenticação",
      "item": [
        {
          "name": "Registrar Usuário",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Admin\",\n  \"email\": \"admin@empresa.com\",\n  \"senha\": \"123456\",\n  \"perfil\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/registrar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "registrar"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@empresa.com\",\n  \"senha\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    console.log('Token salvo automaticamente!');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Verificar Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/verificar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verificar"]
            }
          }
        }
      ]
    },
    {
      "name": "Notas Fiscais",
      "item": [
        {
          "name": "Listar Notas Fiscais",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notas-fiscais",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notas-fiscais"]
            }
          }
        },
        {
          "name": "Criar Nota Fiscal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"numero\": \"NF001\",\n  \"tipo\": \"entrada\",\n  \"valor\": 1500.50,\n  \"data\": \"2024-01-15T10:30:00Z\",\n  \"fornecedor\": \"Fornecedor ABC\",\n  \"observacoes\": \"Primeira nota fiscal de teste\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notas-fiscais",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notas-fiscais"]
            }
          }
        },
        {
          "name": "Buscar Nota Fiscal por ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notas-fiscais/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notas-fiscais", "1"]
            }
          }
        },
        {
          "name": "Atualizar Nota Fiscal",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"numero\": \"NF001-UPD\",\n  \"tipo\": \"entrada\",\n  \"valor\": 1600.75,\n  \"data\": \"2024-01-15T10:30:00Z\",\n  \"fornecedor\": \"Fornecedor ABC Ltda\",\n  \"observacoes\": \"Nota fiscal atualizada\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/notas-fiscais/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notas-fiscais", "1"]
            }
          }
        },
        {
          "name": "Deletar Nota Fiscal",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/notas-fiscais/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notas-fiscais", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    }
  ]
}