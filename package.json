{
  "name": "gestor-empresarial-tests",
  "version": "1.0.0",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ci": "playwright test --reporter=github",
    "test:full": "./start-services.sh && npm test",
    "setup:backend": "cd backend && npm install && npx prisma migrate deploy",
    "setup:frontend": "cd frontend && npm install",
    "start:services": "concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev -- --port 3001\""
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "concurrently": "^8.2.2"
  }
}